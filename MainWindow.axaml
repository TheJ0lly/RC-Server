<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Server.MainWindow"
        xmlns:vm="clr-namespace:Server.Controller"
        xmlns:v="clr-namespace:Server.Views"
        Title="Server"
        RequestedThemeVariant="Dark"
        x:DataType="vm:MainWindowController">
    <Design.DataContext>
        <vm:MainWindowController/>
    </Design.DataContext>
    
    
    <SplitView
        Name="SView"
        IsPaneOpen="{Binding IsPaneOpen}"
        OpenPaneLength="200"
        CompactPaneLength="30"
        DisplayMode="CompactOverlay"
        PanePlacement="Right">
            <SplitView.Pane>
                <StackPanel>
                    <Button HorizontalAlignment="Left" Click="Button_OnClick">&lt;</Button>
                    <TabControl IsVisible="{Binding IsPaneOpen}" TabStripPlacement="Left">
                        <TabItem Name="ShareView" Header="Share"></TabItem>
                        <TabItem Name="SettingsView" Header="Settings"></TabItem>
                    </TabControl>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <v:ShareView/>
            </SplitView.Content>
        </SplitView>
</Window>
